{% extends "LocazikUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <a href="{#{ path('fos_user_profile_edit') }#}">Modifier mes informations <span class="glyphicon glyphicon-pencil"></span>
                </a><br /><br />
    <a href="{{ path('locazik_user_annonce_lister') }}">{{ data['nbAnnoncesOnline'] }} annonces en ligne</a>
</div>
{% endblock %}